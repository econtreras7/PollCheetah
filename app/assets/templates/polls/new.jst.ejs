<div style="margin-left:50px"> 
  <br>
  <h2>New poll</h2>
  <br>
  <form id= "newPoll">
    <div id="errors"></div>
    <label for="title">Title &nbsp;</label>
    <input type="text" name="poll[title]" id="title" class="form-control" style="width:300px;display:inline-block;">
    <br>

    <ul id="questions" style="list-style:none;">
      <% var count = 0 %>
      <% questions = poll.get("questions") %>
      <% if (questions) { %>
        <% questions.forEach(function (question) { %>
          <%= JST["polls/question"] ({question: question, i: count+1}) %>
          <% count += 1 %>
        <% }); %>
      <% } %>
    </ul>
    <br>
    <input type="button" value="Add A Question"
                         id="addAnotherQuestion"
                         data-question-number="0"
                         class="btn btn-warning">

    <br>
    <br>
    <input type="button" id="submitForm" class="btn btn-success btn-lg" value="Create Poll">
  </form>
</div>