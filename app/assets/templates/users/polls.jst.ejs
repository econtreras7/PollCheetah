<div class="text-center">
  <h1>Your polls</h1>
  <br>

  <ul style="list-style:none;margin-left:0;padding-left:0;" class="polls">
    <% polls.forEach(function (poll, index) { %>
      <li class="poll">
        <a href="#/polls/<%= poll.id %>"><h4><strong><%= poll.title %></strong></h4></a>
        <br>
      </li>
    <% }); %>
  </ul>

  <% if (!polls.toString()) { %>
    <p>None yet. Let's get started!</p>
  <% } %>
  <br>

  <a href="#/polls/new" class="btn btn-warning btn-lg">Create new poll</a>
</div>
