    <title>Welcome to PollCheetah!</title>
  </head>

  <body>
    <div class="container">
      <form id="signUp" class="form-signin">
        <h3 class="form-signin-heading">&nbsp; Welcome to PollCheetah!</h3>
        <div id="errors"></div>
        <input type="text" name="user[email]" class="form-control" placeholder="Email address" autofocus>
        <input type="password" name="user[password]" class="form-control" placeholder="Password">
        <button id="submitForm" class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
      </form>
      <br>
      <br>
    </div>
    <div class="text-center">
      <h4>Prefer not to make an account? No problem...</h4>
      <button type="button" id="logInAsGuest" class="btn btn-warning">One-click guest login</button>
    </div>
  </body>
</html>